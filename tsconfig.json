{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "main": ["./main"],
      "app": ["./app"],
    },
    "jsx": "react",
    "target": "es6",
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "playwright.config.ts"
  ]
}
